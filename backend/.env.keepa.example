# Keepa Integration Environment Variables
# Copy this file to .env and fill in your actual values

# Encryption key for API keys (32 bytes hex string)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-here

# Supabase Configuration (if not already in main .env)
SUPABASE_URL=your-supabase-url
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Optional: Keepa API Configuration
KEEPA_API_RATE_LIMIT=10  # Requests per second (default: 10)
KEEPA_CACHE_TTL=300000    # Cache time in milliseconds (default: 5 minutes)
KEEPA_MAX_BATCH_SIZE=100  # Max items per batch request (default: 100)

# Security Configuration
KEEPA_API_TIMEOUT=15000   # Request timeout in milliseconds
KEEPA_MAX_RETRIES=3       # Maximum retry attempts for failed requests

# Monitoring Configuration
KEEPA_LOG_LEVEL=info      # Log level: error, warn, info, debug
KEEPA_TRACK_USAGE=true     # Track API usage in database

# Rate Limiting Per User (tokens per hour)
KEEPA_USER_RATE_LIMIT_BASIC=100
KEEPA_USER_RATE_LIMIT_PREMIUM=1000
KEEPA_USER_RATE_LIMIT_ENTERPRISE=10000